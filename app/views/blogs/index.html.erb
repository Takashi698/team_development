<h1><%= current_user.name %>の投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>投稿者</th>
    <th>イメージ</th>
    <th>コメント</th>
  <tr/>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= image_tag blog.image.url, size: '100x100' %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認', blog_path(blog.id) %></td>
    <td><%= link_to "投稿を編集", edit_blog_path(blog.id) %></td>
    <td><%= link_to '投稿を削除', blog_path(blog.id),
      method: :delete,data: { confirm: '削除しますか？' } %>
    </td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新規投稿', new_blog_path %>

